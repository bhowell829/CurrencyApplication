@model CurrencyApplication.Models.CurrencyModel
@{
    ViewData["Title"] = "Currency";
}

<div class="row p-5 d-flex justify-content-center">
    <div class="col-md-12">
        <div class="card text-center text-muted">
            <div class="card-body">
                <h1>@ViewData["Title"]</h1>
                <hr />
                <div class="row text-left">
                    <div class="col-md-6 px-5">
                        @{
                            if (Model.InputList.Count == 0)
                            {
                                <p class="text-center">There is no input data. Please add data to currencySample.txt file in the root folder.</p>
                            }
                            else
                            {
                                <h4 class="text-center">Input</h4>
                                <hr />

                                foreach (string input in Model.InputList)
                                {
                                    <p>@input</p>
                                }
                            }
                        }
                    </div>
                    <div class="col-md-6 px-5">
                        @{
                            if (Model.OutputList.Count == 0 && Model.InputList.Count == 0)
                            {
                                <p></p>
                            }
                            else
                            {
                                <h4 class="text-center">Output</h4>
                                <hr />

                                using (Html.BeginForm("Index", "Currency", FormMethod.Post))
                                {
                                    <div class="pb-3">
                                        <input type="submit" value="Get Output" class="btn btn-primary" />
                                    </div>
                                }
                                int counter = 1;

                                foreach (string output in Model.OutputList)
                                {
                                    if (output == "DenomOutOfScope")
                                    {
                                        <p>
                                            Denominations in text file can't be less than 2 or greater than 7.
                                        </p>
                                    }
                                    else if (output == "PriceOutOfScope")
                                    {
                                        <p>
                                            Prices in text file can't be less than 2 or greater than 10.
                                        </p>
                                    }
                                    else
                                    {
                                        <p>Dataset @counter: @output</p>
                                        counter++;
                                    }
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>